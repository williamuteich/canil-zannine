generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Puppy {
  id          String @id @default(uuid())
  name        String
  description String
  price       Float

  status StatusDog @default(ativo)

  primaryImage String
  images       ProductImage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductImage {
  id  String @id @default(uuid())
  url String

  puppy   Puppy  @relation(fields: [puppyId], references: [id], onDelete: Cascade)
  puppyId String
}

enum StatusDog {
  pedding
  ativo
  inativo
}

model InstaEmbed {
  id     String  @id @default(uuid())
  title  String
  link   String
  status Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SocialMedia {
  id        String  @id @default(uuid())
  plataform String
  link      String
  value     String?
  status    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
